 <html>
  <head>
    <link rel = "stylesheet" type = "text/css" href =  "/css/styles.css" />
  </head>
  <body>
    <div class="menu">
      <div class="container-fluid">
        <div>
          <ul class="nav navbar-nav navbar-right">
            {{#if admin}}
              <li><a href="/requests">Requests</a></li>
            {{/if}}
            <li><a href="/notifications"><span class="glyphicon glyphicon-bell"></span>Notifications</a></li>
            <li><a href="/settings"><span class="glyphicon glyphicon-cog"></span>Settings</a></li>
            <li><a href="/logout"><span class="glyphicon glyphicon-log-out"></span>Logout</a></li>
          </ul>
        </div>
      </div>
    </div>  
    <div id="wrapper">
      <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
          <li class="sidebar-brand">
            <a href="#">LOOP</a>
          </li>
          <li>
            <a href="/users/{{id}}">{{firstName}} {{lastName}}</a>
          </li>
          {{#each boards}}
            <li>
              <a href="/boards/{{this.board.id}}">{{this.board.name}}</a>
            </li>
            {{#if this.subscribed}}
            <form action="/boards/{{this.board.id}}/unsubscribe" method="POST">
              <button type="submit" class="btn btn-primary">
                Unsubscribe
              </button>
            </form>
            {{else}}
             <form action="/boards/{{this.board.id}}/subscribe" method="POST">
              <button type="submit" class="btn btn-primary">
                Subscribe
              </button>
            </form>           
            {{/if}}
          {{/each}}
        </ul>
      </div>
      <div id="page-content-wrapper">
        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-12">
            </div>
          </div>
        </div>
      </div>  
    </div>
  </body>
</html>
