    <div style="padding-top:50px;">Â </div>
      <div class="col-lg-3 col-md-3 hidden-sm hidden-xs">
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="media">
              <div align="center">
                <img class="thumbnail img-responsive" src="https://lut.im/7JCpw12uUT/mY0Mb78SvSIcjvkf.png" width="300px" height="300px">
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
        <div class="panel panel-default">
          <div class="panel-body">
            <span>
              <h1 class="panel-title pull-left" style="font-size:30px;">
                {{name}}
                <small>Admin: {{admin.firstName}} {{admin.lastName}} ({{admin.username}})</small>
                {{#if adminOfGroup}}
                <small><a data-toggle="modal" data-target="#myModal">Edit Group Profile</a></small>
                {{/if}}
                <!-- Modal -->
                <div id="myModal" class="modal fade" role="dialog">
                  <div class="modal-dialog">
                  <!-- Modal content-->
                    <div class="modal-content">
                      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Edit Profile</h4>
                      </div>
                      <form action="/groups/{{id}}/edit" method="POST">
                        <div class="modal-body">
                          <div class="form-group">
                            <label for="title">Description<span class="require"></span></label>
                            <textarea rows="5" class="form-control" name="description" placeholder="{{description}}" ></textarea>
                          </div>                                                    
                        </div>
                        <div class="modal-footer">
                          <button type="submit" class="btn btn-default">Confirm</button>
                        </div>
                      </form>                                      
              </h1>
              <span class="pull-right">
                {{#if member}}
                <form action="/groups/{{id}}/leave" method="POST">
                  <button class="btn btn-primary" type="submit" aria-expanded="true">
                    Leave
                  </button>              
                </form>
                {{else}}
                <form action="/groups/{{id}}/join" method="POST">
                  <button class="btn btn-primary" type="submit" aria-expanded="true">
                    Join
                  </button>              
                </form>    
                {{/if}}       
              </span>
            </span>
            <br><br><hr>
            <h1 class="panel-title pull-left" style="font-size:30px;">
              {{members.length}} Member(s)
            </h1>
            <br><br>    
            <div class="row">  
              <div class="col-lg-12">
                <p>
                  {{#each members}}                
                  <a href="/users/{{this.id}}" class="btn btn-sq-lg btn-primary">
                    <i class="fa fa-user fa-5x"></i><br/>
                    {{this.firstName}} {{this.lastName}}
                  </a>
                  {{/each}}
                </p>
              </div>
            </div>                             
          </div>
        </div>
        <hr>
      </div>
    </div>
  </div>
</div>