<link rel = "stylesheet" type = "text/css" href =  "/css/styles.css" />  
<div class="mainbody container-fluid">
  <div class="row">
    <div class="menu">
      <div class="container-fluid">
        <div>
          <ul class="nav navbar-nav navbar-right">
            <li><a href="/logout"><span class="glyphicon glyphicon-log-out"></span>Logout</a></li>
          </ul>
        </div>
      </div>
    </div>
    <div style="padding-top:50px;">Â </div>
      <div class="col-lg-3 col-md-3 hidden-sm hidden-xs">
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="media">
              <div align="center">
                <img class="thumbnail img-responsive" src="https://lut.im/7JCpw12uUT/mY0Mb78SvSIcjvkf.png" width="300px" height="300px">
              </div>
              <div class="media-body">
                <hr>
                <h3><strong>Bio</strong></h3>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
        <div class="panel panel-default">
          <div class="panel-body">
            <span>
              <h1 class="panel-title pull-left" style="font-size:30px;">
                {{firstName}} {{lastName}}
                <small>({{username}})</small>
                {{#if self}}
                <small><a data-toggle="modal" data-target="#myModal">Edit Profile</a></small>
                {{/if}}
                <!-- Modal -->
                <div id="myModal" class="modal fade" role="dialog">
                  <div class="modal-dialog">
                  <!-- Modal content-->
                    <div class="modal-content">
                      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Edit Profile</h4>
                      </div>
                      <form action="/users/{{_id}}/edit" method="POST">
                        <div class="modal-body">
                          <div class="form-group">
                            <label for="title">Major<span class="require"></span></label>
                            <input type="text" class="form-control" name="major" placeholder="{{major}}" />
                          </div>
                          <div class="form-group">
                            <label for="title">Class Year<span class="require"></span></label>
                            <input type="text" class="form-control" name="classYear" placeholder="{{classYear}}" />
                          </div>
                          <div class="form-group">
                            <label for="title">Description<span class="require"></span></label>
                            <textarea rows="5" class="form-control" name="description" placeholder="{{description}}" ></textarea>
                          </div>                                                    
                        </div>
                        <div class="modal-footer">
                          <button type="submit" class="btn btn-default">Confirm</button>
                        </div>
                      </form>                      
                    </div>
                  </div>
                </div>                                
              </h1>     
            </span>
            <br><br><hr>
            <h1 class="panel-title pull-left" style="font-size:30px;">
              Groups
            </h1>
            <br><br>    
            <div class="row">  
              <div class="col-lg-12">
                <p>
                  {{#if self}}
                    {{#each groups}}  
                      <a href="/groups/{{this.group.id}}" class="btn btn-sq">
                        {{this.group.name}}
                      </a>
                      {{#if this.public}}
                        <form action="/groups/{{this.group.id}}/hide" method="POST">                      
                          <button type="submit" class="btn btn-default">Hide</button>
                        </form>
                      {{else}}
                        <form action="/groups/{{this.group.id}}/public" method="POST">                      
                          <button type="submit" class="btn btn-default">Make Public</button>
                        </form>                    
                      {{/if}}        
                    {{/each}}                 
                  {{else}}
                    {{#each publicGroups}}  
                      <a href="/groups/{{this.id}}" class="btn btn-sq">
                        {{this.name}}
                      </a>
                    {{/each}}  
                  {{/if}}
                </p>
              </div>      
            </div>
            <h1 class="panel-title pull-left" style="font-size:30px;">
              Challenges
            </h1>
            <br><br>    
            <div class="row">  
              <div class="col-lg-12">
                <p>
                  {{#if self}}
                  {{#each challenges}}  
                      <a href="/groups/{{this.group._id}}" class="btn btn-sq">
                        {{this.challenge.name}}
                      </a>
                    {{#if this.public}}
                    <form action="/challenges/{{this.challenge._id}}/hide" method="POST">                      
                      <button type="submit" class="btn btn-default">Hide</button>
                    </form>
                    {{else}}
                    <form action="/challenges/{{this.challenge._id}}/public" method="POST">                      
                      <button type="submit" class="btn btn-default">Make Public</button>
                    </form>                    
                    {{/if}}        
                  {{/each}}                 
                  {{else}}
                  {{#each publicChallenges}}  
                    <a class="btn btn-sq">
                      {{this.name}}
                    </a>
                  {{/each}}  
                  {{/if}}
                </p>
              </div>      
            </div>                             
          </div>
        </div>
        <hr>
      </div> 
    </div>
  </div>  
</div>

